{
  "tasks": {
    "start": "deno run --allow-net=0.0.0.0:8000 --allow-read=./public start.js",
    "dev": "deno run --watch --allow-net=0.0.0.0:8000 --allow-read=./public start.js"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "jsx"
  },
  "importMap": "./import-map.json",
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["prefer-const"]
    }
  }
}
